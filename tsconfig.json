{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "outDir": "dist",
    "rootDir": "src",

    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*.ts"]
}
